---
import Layout from "../layouts/Layout.astro";
import roster from "../assets/data/roster.json";

const { artists } = roster;
---

<Layout>
  <section class="gallery">
    <div class="gallery-grid">
      {artists.map(artist => (
        <a class="gallery-card" href={artist.link}>
          <img src={artist.profilePhoto} alt={artist.name} />
          <div class="artist-info">
            <h3 class="artist-name">{artist.name}</h3>
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>

<style lang="scss">
  .gallery {
    display: flex;
    justify-content: center;
  }

  .gallery-grid {
    display: grid;
    margin: 0 auto;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    grid-gap: 16px;
  }

  .gallery-card {
    position: relative;
    overflow: hidden;

    img {
      width: 100%;
      height: 500px;
      object-fit: contain;
      transition: transform 0.3s cubic-bezier(0.645, 0.045, 0.355, 1.000);
    }

    &:hover {
      img {
        transform: scale(1.2);
      }

      .gallery-info{
        opacity: 1;
      }
    }
  }

  .artist-info {
    text-align: center;
  }

  .artist-name {
    color: var(--color-primary);
    text-transform: uppercase;
  }
</style>