---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  brand: string;
  artist: string;
  date: string;
  image: string;
  tags?: string[];
}

const { title, brand, artist, date, image, tags = [] } = Astro.props;

// Format the date
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<div class="min-h-screen bg-dark">
  <div class="container mx-auto px-4 py-20">
    <div class="max-w-4xl mx-auto">
      <!-- Header Image -->
      <img
        src={image}
        alt={title}
        class="w-full md:h-96 object-cover md:object-contain rounded-lg mb-12"
      />

      <!-- Title and Metadata -->
      <div class="mb-12">
        <h1 class="text-4xl font-bold mb-4 font-serif">{title}</h1>
        <div class="flex items-center gap-4 text-gray-400 mb-6">
          <span>{brand}</span>
          <span>×</span>
          <span>{artist}</span>
          <span>•</span>
          <span>{formattedDate}</span>
        </div>
        {tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {tags.map(tag => (
              <span class="bg-dark-lighter px-3 py-1 rounded-full text-sm text-gray-400">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>

      <!-- Content -->
      <slot />
    </div>
  </div>
</div>
