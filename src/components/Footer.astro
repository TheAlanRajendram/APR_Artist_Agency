---
import SocialLinks from "./SocialLinks.astro";

const currentYear = new Date().getFullYear();
const base = import.meta.env.BASE_URL;
---

<footer class="bg-black py-12 border-t border-gold">
  <div class="container mx-auto px-4">
    <!-- Main footer content -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      <!-- Column 1: Logo and description -->
      <div class="flex flex-col items-start">
        <img
          src={`${base}/logo_gold.png`}
          alt="APR Artist Agency Logo"
          class="h-12 w-auto object-contain mb-4 self-start"
        />
        <p class="text-gray-300 mb-6">
          APR Artist Agency specializes in creating powerful partnerships
          between brands and exceptional talent across sports, music, and
          entertainment.
        </p>
        <a
          href="mailto:priyanka.rajendram@apr-artistagency.com"
          class="bg-gold hover:bg-opacity-80 transition-colors text-black font-medium py-2 px-6 rounded-md inline-block w-fit"
        >
          Let's Collaborate
        </a>
      </div>

      <!-- Column 2: Empty for spacing on desktop -->
      <div class="hidden md:block"></div>

      <!-- Column 3: Social links -->
      <div class="flex flex-col items-start md:items-end">
        <p class="text-white font-medium text-lg mb-6">
          Explore Our Latest Events, Projects & Creative Partnerships
        </p>
        <SocialLinks iconLabels={true} />
      </div>
    </div>

    <!-- Navigation links -->
    <div class="border-t border-dark-accent pt-8 mb-8">
      <nav class="flex flex-wrap justify-center md:justify-start gap-x-8 mb-8">
        <a
          href={`${base}/`}
          class="text-white hover:text-gold transition-colors">Home</a
        >
        <a
          href={`${base}/about`}
          class="text-white hover:text-gold transition-colors">About</a
        >
        <a
          href={`${base}/services`}
          class="text-white hover:text-gold transition-colors">Services</a
        >
        <a
          href={`${base}/portfolio`}
          class="text-white hover:text-gold transition-colors">Portfolio</a
        >
        <a
          href={`${base}/contact`}
          class="text-white hover:text-gold transition-colors">Contact</a
        >
      </nav>
    </div>

    <!-- Copyright -->
    <div class="border-t border-dark-accent pt-8">
      <p class="text-gray-400 text-sm">
        &copy; {currentYear} APR Artist Agency. All Rights Reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  /* Footer-specific styles */
  footer {
    background-color: #000;
  }
</style>
