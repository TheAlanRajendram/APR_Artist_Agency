---
import { getCollection } from "astro:content";
import WorkDetailLayout from "../../layouts/WorkDetailLayout.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const workItems = await getCollection("work");
  return workItems.map((item) => ({
    params: { slug: item.slug },
    props: { item }
  }));
}

const { item } = Astro.props as { item: CollectionEntry<"work"> };
const { Content } = await item.render();
const base = import.meta.env.BASE_URL;

// Add base path to the image URL
const itemData = {
  ...item.data,
  image: `${base}${item.data.image}`
};
---

<BaseLayout title={item.data.title}>
  <WorkDetailLayout {...itemData}>
    <div
      class="prose prose-invert max-w-none prose-headings:font-serif prose-headings:text-white prose-p:text-white/80 prose-strong:text-white prose-a:text-gold hover:prose-a:opacity-80 prose-blockquote:text-white/80 prose-blockquote:border-l-gold"
    >
      <Content />
    </div>
  </WorkDetailLayout>
</BaseLayout>
