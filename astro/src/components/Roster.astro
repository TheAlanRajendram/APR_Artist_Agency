---
export interface Props {
  roster?: any;
} 

const { roster = [] } =  Astro.props as Props;;
---

<section class="gallery">
  <div class="gallery-grid">
    {roster.map(item => (
      <a class="gallery-card" href={item.link}>
        <img src={item.profilePhoto} alt={item.name} />
        <div class="artist-info">
          <h3 class="artist-name">{item.name}</h3>
        </div>
      </a>
    ))}
  </div>
</section>

<style lang="scss">
  .gallery {
    display: flex;
    justify-content: center;
  }

  .gallery-grid {
    display: grid;
    width: 100%;
    max-width: 960px;
    margin: 0 auto;
    padding-top: 8px;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 8px;
    justify-content: center;
  }

  .gallery-card {
    position: relative;
    overflow: hidden;

    img {
      width: 100%;
      height: auto;
      object-fit: contain;
      transition: transform 0.3s cubic-bezier(0.645, 0.045, 0.355, 1.000);
    }

    &:hover {
      img {
        transform: scale(1.1);
      }

      .gallery-info{
        opacity: 1;
      }
    }
  }

  .artist-info {
    text-align: center;
  }

  .artist-name {
    color: var(--color-primary);
    text-transform: uppercase;
    margin-top: 0;
  }
</style>