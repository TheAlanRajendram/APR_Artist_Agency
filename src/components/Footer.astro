---
import SocialLinks from "./SocialLinks.astro";

const currentYear = new Date().getFullYear();
---

<footer class="bg-dark py-10 md:py-12 border-t border-dark-accent">
  <div class="container mx-auto px-4">
    <div class="max-w-5xl mx-auto">
      <div
        class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8 items-center text-center md:text-left mb-8 md:mb-10"
      >
        <div class="md:col-span-1 flex justify-center md:justify-start">
          <a href="/" aria-label="APR Artist Agency Home">
            <img
              src="/logo_gold.png"
              alt="APR Artist Agency Logo"
              class="h-10 md:h-12 w-auto object-contain"
              width="60"
              height="40"
              loading="lazy"
            />
          </a>
        </div>

        <div class="md:col-span-1 text-center">
          <h2 class="text-2xl md:text-3xl font-display font-bold mb-2">
            Let's Talk
          </h2>
          <a
            href="mailto:info@apr-artistagency.com"
            class="text-base md:text-lg text-primary hover:underline font-sans"
          >
            info@apr-artistagency.com
          </a>
        </div>

        <div class="md:col-span-1 flex flex-col items-center md:items-end">
          {/* MODIFIED TEXT HERE */}
          <p class="text-sm text-primary mb-3 max-w-xs md:text-right">
            See What's Next
          </p>
          <SocialLinks iconLabels={false} />
        </div>
      </div>
    </div>

    <hr class="border-dark-accent border-opacity-50 mb-8" />

    <nav class="mb-6 md:mb-8 text-sm">
      <ul class="flex flex-wrap justify-center gap-x-5 sm:gap-x-6 gap-y-2">
        <li>
          <a
            href="/about"
            class="text-primary hover:text-primary transition-colors">About</a
          >
        </li>
        <li>
          <a
            href="/services"
            class="text-primary hover:text-primary transition-colors"
            >Services</a
          >
        </li>
        <li>
          <a
            href="/work"
            class="text-primary hover:text-primary transition-colors">Work</a
          >
        </li>
      </ul>
    </nav>

    <div class="text-center">
      <p class="text-secondary text-xs font-sans">
        &copy; {currentYear} APR Artist Agency. All Rights Reserved.
      </p>
    </div>
  </div>
</footer>
