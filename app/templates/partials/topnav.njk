{% macro style(theme='dark', transparent='', activePage='') %}
{% if theme == 'dark' %}
  {% set img = "img/logo/logo_white.png" %}
{% elif theme == 'light' %}
  {% set img = "img/logo/logo_gold.png" %}
{% endif %}
<div id="myTopnav" class="topnav {% if transparent == 'true' %} topnav--transparent {% endif %}">
  <div>
    <a href="index.html"><img src="{{ img }}" width="98px" height="auto"></a>
  </div>
  <div>
    {% import "partials/link_color.njk" as link%}
    <a class="topnav__link {{ link.setColor(activePage, 'Artists') }}" href="artists.html">Artists</a>
    <a class="topnav__link {{ link.setColor(activePage, 'Models') }}" href="models.html">Models</a>
    <a class="topnav__link {{ link.setColor(activePage, 'About') }}" href="about.html">About</a>
    <a class="topnav__link {{ link.setColor(activePage, 'Contact') }}" href="contact.html">Contact</a>
  </div>
</div>
{% endmacro %}