---
import SocialLinks from "./SocialLinks.astro";

const currentYear = new Date().getFullYear();
const base = import.meta.env.BASE_URL;
---

<footer class="bg-dark text-white py-10 md:py-12 border-t border-dark-accent">
  <div class="container mx-auto px-4">
    <div class="max-w-5xl mx-auto">
      <div
        class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8 items-center text-center md:text-left mb-8 md:mb-10"
      >
        <div class="md:col-span-1 flex justify-center md:justify-start">
          <a href={`${base}/`} aria-label="APR Artist Agency Home">
            <img
              src={`${base}/logo_gold.png`}
              alt="APR Artist Agency Logo"
              class="h-10 md:h-12 w-auto object-contain"
            />
          </a>
        </div>

        <div class="md:col-span-1 text-center">
          <h2
            class="text-2xl md:text-3xl font-display font-bold mb-2 text-white"
          >
            Let's Talk
          </h2>
          <a
            href="mailto:priyanka.rajendram@apr-artistagency.com"
            class="text-base md:text-lg text-gold hover:underline font-sans"
          >
            hello@apr-artistagency.com
          </a>
        </div>

        <div class="md:col-span-1 flex flex-col items-center md:items-end">
          {/* MODIFIED TEXT HERE */}
          <p class="text-sm text-gray-300 mb-3 max-w-xs md:text-right">
            See What's Next
          </p>
          <SocialLinks iconLabels={false} />
        </div>
      </div>
    </div>

    <hr class="border-dark-accent border-opacity-50 mb-8" />

    <nav class="mb-6 md:mb-8 text-sm">
      <ul class="flex flex-wrap justify-center gap-x-5 sm:gap-x-6 gap-y-2">
        <li>
          <a
            href={`${base}/about`}
            class="text-gray-300 hover:text-gold transition-colors">About</a
          >
        </li>
        <li>
          <a
            href={`${base}/services`}
            class="text-gray-300 hover:text-gold transition-colors">Services</a
          >
        </li>
        <li>
          <a
            href={`${base}/work`}
            class="text-gray-300 hover:text-gold transition-colors">Work</a
          >
        </li>
        <li>
          <a
            href={`${base}/contact`}
            class="text-gray-300 hover:text-gold transition-colors">Contact</a
          >
        </li>
      </ul>
    </nav>

    <div class="text-center">
      <p class="text-gray-500 text-xs font-sans">
        &copy; {currentYear} APR Artist Agency. All Rights Reserved.
      </p>
    </div>
  </div>
</footer>
