import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  brand: string;
  artist: string;
  date: string;
  image: string;
  tags: string[];
}

const { title, brand, artist, date, image, tags } = Astro.props;

<BaseLayout title={title}>
  <article class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <img src={image} alt={title} class="w-full h-96 object-cover rounded-lg mb-8" />

        <div class="mb-8">
          <h1 class="text-4xl font-bold mb-4 font-serif">{title}</h1>
          <div class="flex flex-wrap gap-4 text-gray-400 mb-4">
            <span>Brand: {brand}</span>
            <span>Artist: {artist}</span>
            <span>Date: {date}</span>
          </div>
          <div class="flex flex-wrap gap-2">
            {tags.map(tag => (
              <span class="bg-dark-lighter px-3 py-1 rounded-full text-sm">{tag}</span>
            ))}
          </div>
        </div>

        <div class="prose prose-invert max-w-none">
          <slot />
        </div>
      </div>
    </div>
  </article>
</BaseLayout>
