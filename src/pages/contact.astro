---
import Layout from "../layouts/Layout.astro";

---

<Layout>
  <section class="title-section">
    <div class="title-wrapper">
      <span class="title">GET IN TOUCH</span>
    </div>
  </section>
  <div class="container">
    <form action="https://formspree.io/f/mzbklljo" method="POST">
      <input type="text" name="name" id="name" placeholder="Name" required>
      <input type="text" name="email" id="email" placeholder="Email" required>
      <textarea name="message" id="message" rows="6" placeholder="Message" required></textarea>
      <input type="submit" value="Send Message">
    </form>
  </div>
</Layout>

<style lang="scss">

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px;
    text-align: center;
  }

  .title-section {
    background-image: url('/images/background_contact_us.jpg');
    background-size: cover;
    background-position: center;
    padding: 40px 0;
    margin-bottom: 30px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;

    &::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.4);
    }
  }

  .title-wrapper {
    position: relative;
  }

  .title {
    font-weight: 700;
    font-size: 2.5rem;
    color: white;
    text-align: center;
    padding: 16px;
    border: 2px solid white;
  }

  input[type="text"],
  textarea {
    width: 100%;
    padding: 10px;
    margin-bottom: 20px;
    background-color: #333;
    border: 2px solid #444;
    color: #FFF;
    font-size: 16px;
    font-weight: 300;
    border-radius: 5px;
    transition: border-color 0.3s ease;

    &:focus {
      border-color: var(--color-primary);
      outline: none;
    }
  }

  textarea {
    resize: none;
  }

  input[type="submit"] {
    background-color: var(--color-primary);
    color: #222;
    font-size: 16px;
    font-weight: 700;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    text-transform: uppercase;
    border-radius: 5px;
    transition: background-color 0.3s ease, color 0.3s ease;

    &:hover {
      background-color: #FFF;
      color: #222;
    }
  }
</style>