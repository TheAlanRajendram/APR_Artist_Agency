---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact">
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-bold mb-12 text-center font-serif">Get in Touch</h1>

        <div class="grid md:grid-cols-2 gap-12">
          <div class="space-y-8">
            <div>
              <h2 class="text-2xl font-bold mb-4 text-gold font-serif">Contact Information</h2>
              <div class="space-y-4 text-gray-300">
                <p>
                  <span class="font-semibold">Email:</span><br />
                  <a href="mailto:info@aprartistagency.com" class="hover:text-gold transition-colors">
                    info@aprartistagency.com
                  </a>
                </p>
                <p>
                  <span class="font-semibold">Phone:</span><br />
                  <a href="tel:+1234567890" class="hover:text-gold transition-colors">
                    +1 (234) 567-890
                  </a>
                </p>
                <p>
                  <span class="font-semibold">Address:</span><br />
                  123 Agency Street<br />
                  New York, NY 10001<br />
                  United States
                </p>
              </div>
            </div>

            <div>
              <h2 class="text-2xl font-bold mb-4 text-gold font-serif">Business Hours</h2>
              <div class="space-y-2 text-gray-300">
                <p>Monday - Friday: 9:00 AM - 6:00 PM EST</p>
                <p>Saturday - Sunday: Closed</p>
              </div>
            </div>
          </div>

          <div class="bg-dark-lighter p-8 rounded-lg">
            <h2 class="text-2xl font-bold mb-6 text-gold font-serif">Send Us a Message</h2>
            <form class="space-y-4">
              <div>
                <label for="name" class="block text-gray-300 mb-2">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="w-full px-4 py-2 bg-dark border border-gray-700 rounded-lg focus:outline-none focus:border-gold"
                  required
                />
              </div>

              <div>
                <label for="email" class="block text-gray-300 mb-2">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full px-4 py-2 bg-dark border border-gray-700 rounded-lg focus:outline-none focus:border-gold"
                  required
                />
              </div>

              <div>
                <label for="subject" class="block text-gray-300 mb-2">Subject</label>
                <input
                  type="text"
                  id="subject"
                  name="subject"
                  class="w-full px-4 py-2 bg-dark border border-gray-700 rounded-lg focus:outline-none focus:border-gold"
                  required
                />
              </div>

              <div>
                <label for="message" class="block text-gray-300 mb-2">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  class="w-full px-4 py-2 bg-dark border border-gray-700 rounded-lg focus:outline-none focus:border-gold"
                  required
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full bg-gold text-dark font-bold py-3 px-6 rounded-lg hover:bg-opacity-90 transition-colors"
              >
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
