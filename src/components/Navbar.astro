---
import apr_logo from "../assets/logo/logo_gold.png";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<nav class="topnav">
  <div>
    <a href="index.html" id="logo"><img src={apr_logo} width="72px" height="auto"></a>
  </div>
  <div>
    <a href="artists.html" class:list={[ "topnav__link", currentPath ===  "artists.html" ? "topnav__link--white" : "" ]}>Artists</a>
    <a href="talents.html" class:list={[ "topnav__link", currentPath ===  "talents.html" ? "topnav__link--white" : "" ]}>Talents</a>
    <a href="about.html" class:list={[ "topnav__link", currentPath ===  "about.html" ? "topnav__link--white" : "" ]}>About</a>
    <a href="contact.html" class:list={[ "topnav__link", currentPath ===  "contact.html" ? "topnav__link--white" : "" ]}>Contact</a>
  </div>
  <div class="hamburger-menu">
    <div class="hamburger-menu__line hamburger-menu__line--top-left"></div>
    <div class="hamburger-menu__line hamburger-menu__line--top-right"></div>
    <div class="hamburger-menu__line hamburger-menu__line--center"></div>
    <div class="hamburger-menu__line hamburger-menu__line--bottom-left"></div>
    <div class="hamburger-menu__line hamburger-menu__line--bottom-right"></div>
  </div>
</nav>

<div class="sidenav">
  <ul class="sidenav__list">
    <li class="sidenav__item">
      <a class="sidenav__link" href="artists.html">Artist</a>
    </li>
    <li class="sidenav__item">
      <a class="sidenav__link" href="talents.html">Talents</a>
    </li>
    <li class="sidenav__item">
      <a class="sidenav__link" href="about.html">About</a>
    </li>
    <li class="sidenav__item">
      <a class="sidenav__link" href="contact.html">Contact</a>
    </li>
    <li class="sidenav__item">
      <a class="sidenav__link" href="https://www.instagram.com/priyankarajen/">
        <i class="fa fa-instagram" aria-hidden="true"></i>
      </a>
      <a class="sidenav__link" href="https://twitter.com/aprartistagency">
        <i class="fa fa-twitter" aria-hidden="true"></i>
      </a>
    </li>
  </ul>
</div>

<style lang="scss">

  .topnav {
    overflow: hidden;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    margin: 0;
    padding: 12px 16px;
    background: var(--color-surface);

    &-transparent {
      background: none;
    }

    &__link {
      position: relative;
      text-align: center;
      margin: 0 1rem;
      text-decoration: none;
      text-transform: uppercase;
      font-size: 1rem;

      &--white {
        color: white;
      }
      
      &--gray {
        color: gray;
      }

      &--dark {
        color: white;
      }

      &::after {
        content: '';
        position: absolute;
        left: 50%;
        bottom: 0;
        transform: translateX(-50%) scaleX(0);
        transform-origin: 50% 50%;
        width: 100%;
        height: 1px;
        background-color: var(--color-primary);
        transition: transform 250ms;
      }
      &:hover {
        &::after { transform: translateX(-50%) scaleX(1); }
      }
    }
  }

  @media screen and (max-width: 950px) {
    .topnav__link {
      display: none; 
      margin: 0; 
    }
    .topnav__icon {
      display: inline;
    }
  }

  .sidenav {
    position: fixed;
    z-index: 4;
    top: 0;
    right: 0;
    width: 0;
    height: 100%;
    background-color: black;
    display: flex;
    transition: 0.3s;

    &__list { 
      padding-top: 100px;
      text-align: center; 
    }

    &__item {
      list-style: none;
      margin: 25px;
    }

    &__link {
      position: relative;
      font-size: 32px;
      color: #818181;
      text-transform: uppercase;

      &:hover {
        color: white;
      }
    }

    &--active {
      width: 300px;
    }
  }

  .hamburger-menu {
    position: relative;
    z-index: 5;
    width: 24px;
    height: 20px;
    margin: 0;
    cursor: pointer;

    &__line {
      position: absolute;
      width: 50%;
      height: 2px;
      background-color: white;
      transition: transform 0.2s;

      &--top-left {
        top: 2px;
        left: 0;
      }
      &--top-right { 
        top: 2px;
        right: 0;
      }
      &--center {
        width: 100%;
        top: 50%;
        left: 0%;
      }
      &--bottom-left {
        bottom: 0%;
        left: 0;
      }
      &--bottom-right { 
        bottom: 0%;
        right: 0;
      }
    }

    &--active {
      .hamburger-menu__line {
        &--top-left { transform: rotateZ(45deg) translate(4px, 1px); }
        &--top-right { transform: rotateZ(-45deg) translate(-4px, 1px); }
        &--center { opacity: 0; }
        &--bottom-left { transform: rotateZ(-45deg) translate(4px, -2px); }
        &--bottom-right { transform: rotateZ(45deg) translate(-4px, -2px); }
      }
    }

    @media screen and (min-width: 950px) {
      display: none;
    }
  }

</style>

<script>
  const menuIcon = document.querySelector('.hamburger-menu');
  const navbar = document.querySelector('.sidenav');

  menuIcon.addEventListener('click', () => {
    menuIcon.classList.toggle('hamburger-menu--active')
    navbar.classList.toggle('sidenav--active')
  })
</script>